<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Authors>Daily</Authors>
		<Description>API网关Carp.Gateway Kubernetes扩展包</Description>
		<PackageId>Carp.Gateway.Provider.Kubernetes</PackageId>
		<Product>Carp.Gateway.Provider.Kubernetes</Product>
		<AssemblyName>Carp.Gateway.Provider.Kubernetes</AssemblyName>
		<PackageProjectUrl>https://github.com/d4ilys/Carp.Gateway</PackageProjectUrl>
		<IsPackable>true</IsPackable>
		<PackageIcon>logo.png</PackageIcon>
		<RepositoryUrl>https://github.com/d4ilys/Carp.Gateway.git</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<Version>0.6.5</Version>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="KubeClient.Extensions.DependencyInjection" Version="2.4.10" />
	</ItemGroup>

	<ItemGroup>
		<None Include="logo.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\..\Daily.Carp\Daily.Carp.csproj" />
	</ItemGroup>
</Project>